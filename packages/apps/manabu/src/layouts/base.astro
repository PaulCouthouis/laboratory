---
	const { title } = Astro.props
---

<html lang="fr" data-theme='mytheme'>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>Manabu - Apprendre le japonais - {title}</title>
	</head>
	<body class="max-h-full">
		<main class="max-h-[calc(100vh-64px)] overflow-auto">
			<slot />
		</main>
		<nav class="navbar bg-primary bg-opacity-40">
			<div class="flex-1">
				<a href="/" class="btn btn-ghost normal-case text-xl">
					Manabu
				</a>
			</div>
		</nav>
	</body>
</html>