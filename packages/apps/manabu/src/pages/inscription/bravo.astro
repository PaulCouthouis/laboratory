---
import Base from '../../layouts/base.astro';
---

<Base title="Inscription">
  <div class="hero min-h-screen bg-[url('/backgrounds/registration.jpg')]">
    <div class="hero-content flex-col lg:flex-row w-screen">
      <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
        <div class="card-body">
          <h2 class="card-title text-success text-2xl">Félicitation&nbsp;!</h2>
          <p class="text-xl">Tu es désormais inscrit, check ta boite mail puis clique sur le lien de confirmation.</p>
        </div>
      </div>
    </div>
  </div>
</Base>