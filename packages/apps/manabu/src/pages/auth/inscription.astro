---
import Register from '../../features/student/ui/register.svelte';
import Base from '../../layouts/base.astro';
---

<Base title="Inscription">
  <div class="hero min-h-screen bg-[url('/backgrounds/registration.jpg')]">
    <div class="hero-content flex-col lg:flex-row">
      <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
        <div class="card-body">
          <Register client:load />
        </div>
      </div>
      <div class="bg-neutral/25 p-4 text-center text-base-200 lg:text-left lg:ml-10">
        <h1 class="text-5xl font-bold">Inscrivez-vous&nbsp;!</h1>
        <p class="py-6">Commencez votre apprentissage du japonais en moins de 30 secondes</p>
      </div>
    </div>
  </div>
</Base>