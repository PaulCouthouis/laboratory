---
  export interface Props {
    reverse?: boolean
  }

  const { 
    reverse,
  } = Astro.props
---

<div class:list={["flex items-center justify-center flex-col snap-start", {'lg:flex-row': !reverse, 'lg:flex-row-reverse': reverse}]}>
  <div class="p-4 bg-white lg:w-5/12">
    <slot name="img" />
  </div>
  <div class="lg:w-2/12 flex justify-center">
    <div class="relative bottom-14 w-20 h-20 bg-primary rounded-full text-white font-bold flex justify-center items-center lg:bottom-0">
      <slot name='time' />
    </div>
  </div>
  <div class="-mt-14 p-4 lg:mt-0 lg:w-5/12">
    <p>
      <h3 class="text-xl mb-3">
        <slot name='title' />
      </h3>
      <slot name="content" />
    </p>
  </div>
</div>