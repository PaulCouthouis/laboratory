---
import '@fontsource/poppins'

const members = ['Loid Forger', 'Anya Forger', 'Yor Forger']
---

<section class="h-min-screen text-lg font-sans-serif bg-cover bg-center bg-[url('/images/reply-vertical.jpeg')] landscape:bg-[url('/images/reply-horizontal.jpeg')]">
  <div class="h-full flex justify-center items-center bg-black/40 text-white">
    <article class="m-2 font-['Poppins'] text-sm md:text-lg">
      <header>
        <h2 class="text-lg text-center pb-4 md:text-2xl">
          Chère famille Forger,
        </h2>
        <p class="text-gray-300">
          Nous serions heureux de vous accueillir à notre cérémonie de mariage. <br
          />
          Pourriez-vous nous donner une réponse avant le <time>31 Mai 2023</time
          > ?
        </p>
      </header>
      <form class="mt-4">
        {
          members.map((member) => (
            <fieldset class="my-4">
              <legend class="text-center">- {member} -</legend>
              <div class="flex justify-between my-2">
                <label>
                  <input type="radio" name={member} /> Présent
                </label>
                <label>
                  <input type="radio" name={member} /> Absent
                </label>
                <label>
                  <input type="radio" name={member} /> Indécis
                </label>
              </div>
              <input
                class="border p-2 w-full text-gray-700"
                placeholder="Régime alimentaire* (facultatif)"
                type="text"
              />
            </fieldset>
          ))
        }
        <textarea
          class="border h-28 p-2 w-full text-gray-700"
          placeholder="Message (facultatif)"
        />
        <div class="text-right mt-4">
          <button
            class="text-right bg-primary rounded p-4"
            type="submit">Envoyer le coupon-réponse</button
          >
        </div>
      </form>
      <p class="text-xs text-gray-300 mt-2 text-right">
        * alergie, végétarien, raison religieuse, etc
      </p>
    </article>
  </div>
</section>
