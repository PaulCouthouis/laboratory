---
import { getImage } from '@astrojs/image';

const { src: horizontal } = await getImage({src: '../images/cover-horizontal.jpeg', width: 2445, height: 1630});
const { src: vertical } = await getImage({src: '../images/cover-vertical.jpeg', width: 917, height: 1630},);

const cH = `landscape:bg-[url('${vertical}')]`
const cV = `bg-[url('${horizontal}')]`
---

<section
  class="h-screen bg-cover bg-top bg-[url('/images/cover-vertical.jpeg')] landscape:bg-[url('/images/cover-horizontal.jpeg')]"
>
  <div class="h-full flex justify-end items-start lg:p-28">
    <article
      class="w-full flex flex-col text-white text-center bg-black/40 font-['Pacifico'] p-2 lg:w-fit lg:p-12"
    >
      <p class="align-middle text-xl  lg:text-2xl lg:pb-4">
        Rejoignez-nous
      </p>
      <div class="h-full flex items-center my-2">
        <h1
          class="w-full py-8 border-y-2 text-center text-primary text-5xl lg:text-6xl "
        >
          Moe & Paul
        </h1>
      </div>
      <p class="align-middle text-xl lg:text-2xl lg:pt-4">
        à notre célébration de mariage.
      </p>
    </article>
  </div>
</section>